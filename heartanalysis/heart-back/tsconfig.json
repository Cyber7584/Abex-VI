{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "./",
		"paths": {
			"@heart/*": ["./src/module/heart/*"],
			"@helper/*": ["./src/helper/*"],
			"@type/*": ["./src/type/*"]
		},
		"allowJs": true,
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*",
		"./public/**/*",
		"./config",
		"./config/**/*",
		"./index.js",
		"./types/**/*"
	],
	"exclude": ["node_modules"]
}
